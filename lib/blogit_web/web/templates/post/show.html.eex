<%= render "_post.html", conn: @conn, post: @post  %>
<div id="disqus_thread"></div>

<script>
  var disqus_config = function () {
    this.page.url = '<%= BlogitWeb.Web.Router.Helpers.url(@conn) <> @conn.request_path %>';
    this.page.identifier = '<%= @post.name %>';
    this.page.title = '<%= @post.meta.title %>';
    this.language = '<%= @conn.assigns[:locale] %>';
  };

  (function() {
    var d = document, s = d.createElement('script');
    s.src = '//<%= disqus_url(@conn) %>.disqus.com/embed.js';
    s.setAttribute('data-timestamp', +new Date());
    (d.head || d.body).appendChild(s);
  })();
</script>
<noscript>Please enable JavaScript to view the <a href="https://disqus.com/?ref_noscript">comments powered by Disqus.</a></noscript>
<script id="dsq-count-scr" src="//<%= disqus_url(@conn) %>.disqus.com/count.js" async></script>
